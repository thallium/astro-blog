---
import { Languages } from "lucide-astro";
import { LANGS, languages } from "src/site-config";
const url = Astro.url.pathname.split("/");
---

<div class="dropdown h-6">
  <button
    class="dropdown-toggle"
    type="button"
    data-bs-toggle="dropdown"
    aria-expanded="false"
  >
    <Languages class="h-6 w-6" />
  </button>
  <ul
    class="dropdown-menu dropdown-menu-end bg-background mt-2 rounded-md border-border border-[1px] p-1"
  >
    {
      LANGS.map((lang) => (
        <li class="py-2 px-2 rounded-md hover:bg-accent">
          <a href={url.with(1, lang).join("/")}>{languages[lang].name}</a>
        </li>
      ))
    }
  </ul>
</div>
