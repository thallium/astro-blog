---
interface Props {
  src: string;
  alt: string;
  width: number;
  height: number;
  position?: string;
  caption?: string;
}
import { Image } from "astro:assets";

const { src, alt, width, height, caption } = Astro.props;
---

<figure>
  <Image
    class="mx-auto"
    src={src}
    alt={alt || ""}
    width={width}
    height={height}
  />
  {caption && <figcaption class="text-center">{caption}</figcaption>}
</figure>
